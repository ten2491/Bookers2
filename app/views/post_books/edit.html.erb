<div class='container'>
      <div class="row">
        <div class='top-message col-md-offset-3 col-md-6'>

<h2>Editing Book</h2>

<%= form_for(@post_book) do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group has-icon">
        <label class="control-label">Title</label><br />
        <%= f.text_field :title, class:"form-control", placeholder:"" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <label class="control-label">Opinion</label><br />
      <%= f.text_area :opinion, class:"form-control", rows:"3", placeholder:"" %>
    </div>
  </div>
  <br>
  <%= f.submit "Update book", class:"btn btn-primary btn-block" %>
<% end %>
<br>
<div class="pull-left">
	<%= link_to "show",  post_book_path(@post_book.id) %> | <%= link_to "Back", new_post_book_path %>
</div>

</div>
</div>
</div>