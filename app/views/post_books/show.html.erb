 <%= render 'users/userinfo', user: @user %>
 <%= render 'post_books/newbook', post_book: @post_book %>

 <div class="container">
    <div class="col-xs-9">

<h2>Book detail</h2>
		<table class="table table-condensed">
            <thead>
              <tr>
              	<th colspan="3"></th>
                <% if @post_book.user == current_user %>
                <th colspan="2"></th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <tr>
              	<td><%= attachment_image_tag @post_book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td></td>
                <td><%= @post_book.title %></td>
                <td><%= @post_book.opinion %></td>
                <% if @post_book.user == current_user %>
                <td><%= link_to "edit", edit_post_book_path(@post_book), class: "btn btn-success"%></td>
                <td><%= link_to "destroy", post_book_path(@post_book), method: :delete,class: "btn btn-danger" %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
          <%= @post_book.user.name %>

        </div>
      </div>